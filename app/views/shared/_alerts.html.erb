<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert],
  title: "Justin Snider Portfolio", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error],
  title: "Justin Snider Portfolio", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice],
  title: "Justin Snider Portfolio", sticky: false) %>
<% end %>